#include <stdio.h>
#include <math.h>
 
int main()
 {
     double d = 0.0, p = 0.0, t = 0.0; // User inputs these values; d stands for number of days, and p stands for the number of pennies received on the first day. 
     printf("Days in month: ");
     scanf("%lf", &d);
     if (d < 28)
     {
         printf("Please enter a number of days in the month greater than 27 and less than 32: ");
         scanf("%lf", &d);
     }
     if (d > 31)
     {
         printf("Please enter a number of days in the month greater than 27 and less than 32: ");
         scanf("%lf", &d);
     }
     if (d == 28)
     {
         printf("Pennies on first day: ");
         scanf("%lf", &p);
         if (p < 0)
         {
            printf("Please retry: ");
            scanf("%lf", &p);
         }
         t = p*(pow(2,2)); 
         printf("$%.2lf\n", t); // create the sum of a geometric sequence 
     }
     if (d == 29)
     {
         printf("Pennies on first day: ");
         scanf("%lf", &p);
         if (p < 0)
         {
            printf("Please retry: ");
            scanf("%lf", &p);
         }
         t = p*(pow(2,2));// create the sum of the geometric series
         printf("$%.2lf\n", t);
     }
     if (d == 30)
     {
         printf("Pennies on first day: ");
         scanf("%lf", &p);
         if (p < 0)
         {
            printf("Please retry: ");
            scanf("%lf", &p);
         }
         t = p*(pow(2,2)); //create the sum of the geometric series
         printf("$%.2lf\n", t);
     }
     if (d == 31)
     {
         printf("Pennies on first day: ");
         scanf("%lf", &p);
         if (p < 0)
         {
            printf("Please retry: ");
            scanf("%lf", &p);
         }
         t = p*(pow(2,2)); //create the sum of the geometric series
         printf("$%.2lf\n", t);
     }
     return 0;
 }
